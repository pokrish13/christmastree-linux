#!/bin/bash

# Check if script is executable, if not make it executable
if [ ! -x "$0" ]; then
    echo "Making Christmastree executable..."
    chmod +x "$0"
    echo "âœ… Now you can run: ./Christmastree"
    exit 0
fi

GREEN='\033[0;32m'
RED='\033[0;31m'
