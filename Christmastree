PINK='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m'

colors=($RED $YELLOW $BLUE $PINK $CYAN $WHITE)

draw_tree() {
    printf "\033[2J\033[H"
    rand_color=${colors[$RANDOM % ${#colors[@]}]}
    
    echo -e "${YELLOW}         â˜†${NC}"
    echo -e "${GREEN}        * *${NC}"
    echo -e "       ${GREEN}* ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN}"
    echo -e "      * * * *"
    echo -e "     * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN}"
    echo -e "    * * * * * *"
    echo -e "   * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN}"
    echo -e "  * * * * * * * *"
    echo -e " * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN} * ${rand_color}Â°${GREEN}"
    echo -e "* * * * * * * * * *"
    echo -e "${YELLOW}        | |"
    echo -e "        | |${NC}"
    echo -e "${RED}   ðŸŽ„ Merry Christmas! ðŸŽ„${NC}"
    echo -e "${RED}   ðŸŽ‰ Happy New Year! ðŸŽ‰${NC}"
    echo -e "${CYAN}   Exit with: ${WHITE}Ctrl+C${NC}"
}

echo -e "${GREEN}ðŸŽ„ Starting Christmas Tree...${NC}"
sleep 1

while true; do
    draw_tree
    sleep 0.5
done
